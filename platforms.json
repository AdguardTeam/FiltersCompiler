{
    "WINDOWS": {
        "platform": "windows",
        "path": "windows",
        "configuration": {
            "ignoreRuleHints": false
        },
        "defines": {
            "adguard": true,
            "adguard_app_windows": true
        }
    },
    "MAC": {
        "platform": "mac",
        "path": "mac",
        "configuration": {
            "ignoreRuleHints": false
