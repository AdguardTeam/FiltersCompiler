            "removeRulePatterns": [
                "\\$\\$|\\$\\@\\$",
                "#%#",
                "#@%#",
                "#\\$#",
                "#@\\$#",
                "\\$mp4",
                "\\$replace=",
                "\\$stealth",
                "\\$empty",
                "important,replace=",
                "\\$app",
                "\\$protobuf",
                "important,protobuf",
                "\\[-ext-",
                ":has\\(",
                ":has-text\\(",
                ":contains\\(",
                ":matches-css\\(",
                ":matches-css-before\\(",
                ":matches-css-after\\(",
                ":-abp-has\\(",
                ":-abp-contains\\(",
                "#\\?#",
                "#\\?\\$#",
                "#@\\?#",
                "#@\\?\\$#"
            ],
            "ignoreRuleHints": false
        },
        "defines": {
            "adguard": true,
            "adguard_app_ios": true
